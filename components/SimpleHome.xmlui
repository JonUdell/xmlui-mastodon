<Component name="SimpleHome">
  <VStack padding="1rem">
    <H1>Mastodon Timeline</H1>

    <Button
      label="Load Toots"
      onClick="window.loadTootsManually()"
    />

    <Fragment when="{window.loadedToots && window.loadedToots.length > 0}">
      <Text>Found {window.loadedToots.length} toots</Text>
    </Fragment>
  </VStack>
</Component>